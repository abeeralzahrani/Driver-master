<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_example"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_shadow"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:weightSum="1"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/confirmRequestTV"
            android:textColor="@color/gray"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:text="قائمة الطلبات "
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="0.43" />

        <ImageView
            android:layout_width="47dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/order"
            android:id="@+id/imageView5" />

    </LinearLayout>

    <ScrollView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/scroller">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/linerLayout1"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            >



            <TableLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:paddingTop="10dp"
                android:paddingLeft="10dp"
                 android:paddingRight="10dp"
                 android:paddingBottom="10dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_marginBottom="10dp"
                 android:layout_marginTop="10dp"
                android:id="@+id/tableRequestConfirm"

               >

                 <TableRow
                     android:layout_width="wrap_content"
                     android:layout_height="0dp"
                     android:layout_gravity="right"
                     android:layout_weight="1"
                     android:gravity="right"
                     android:layout_marginBottom="20dp">

                     <TextView
                         android:text=""
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/NameTV"
                         android:textColor="@color/black"
                         android:textSize="18sp"
                         android:paddingRight="10dp"
                         android:layout_column="1"
                         android:layout_weight="0.10"
                         android:layout_marginRight="40dp"
                         android:gravity="right"
                         />

                     <TextView
                         android:text="اسم الراكب"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/passengerNameTV"
                         android:textColor="@color/colorPrimary"
                         android:textSize="18sp"
                         android:textStyle="bold"
                         android:paddingLeft="10dp"
                         android:layout_column="2"/>

                 </TableRow>

                 <TableRow
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_gravity="right"
                     android:gravity="right"
                     android:layout_marginBottom="20dp">

                     <TextView
                         android:text=""
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/startDateTV"
                         android:textColor="@color/black"
                         android:textSize="14sp"
                         android:textStyle="normal"
                         android:layout_weight="0.10"
                         android:layout_marginRight="40dp"
                         android:paddingRight="10dp"
                         android:layout_column="1"
                         android:gravity="right" />

                     <TextView
                         android:text="تاريخ بداية التسجيل "
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/startDateTV1"
                         android:textColor="@color/colorPrimary"
                         android:textSize="18sp"
                         android:textStyle="bold"
                         android:paddingLeft="10dp"
                         android:clickable="false"
                         android:layout_column="2" />

                 </TableRow>

                 <TableRow
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:gravity="right"
                     android:layout_gravity="right"
                     android:layout_marginBottom="20dp">

                     <TextView
                         android:text=""
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/endDateTV"
                         android:textColor="@color/black"
                         android:textSize="14sp"
                         android:layout_weight="0.10"
                         android:layout_marginRight="40dp"
                         android:textStyle="normal"
                         android:paddingLeft="10dp"
                         android:paddingRight="10dp"
                         android:layout_column="1"
                         android:gravity="right"

                         />
                     <TextView
                         android:text="تاريخ نهاية التسجيل"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/endDateTV1"
                         android:textColor="@color/colorPrimary"
                         android:textSize="18sp"
                         android:textStyle="bold"
                         android:paddingLeft="10dp"
                         android:layout_column="2"/>


                 </TableRow>

                 <TableRow
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_gravity="right"
                     android:gravity="right"
                     android:layout_marginBottom="20dp">

                     <TextView
                         android:text=""
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/pickUpLTV"
                         android:textColor="@color/black"
                         android:textSize="14sp"
                         android:textStyle="normal"
                         android:paddingLeft="10dp"
                         android:layout_weight="0.10"
                         android:layout_marginRight="40dp"
                         android:paddingRight="10dp"
                         android:layout_column="1"
                         android:gravity="right"
                         />
                     <TextView
                         android:text="مكان البدء"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/pickUpLTV1"
                         android:textColor="@color/colorPrimary"
                         android:textSize="18sp"
                         android:textStyle="bold"
                         android:paddingLeft="10dp"
                         android:layout_column="2"/>


                 </TableRow>


                 <TableRow
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:gravity="right"
                     android:layout_marginBottom="20dp">

                     <TextView

                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/dropOffLTV"
                         android:textColor="@color/black"
                         android:textSize="14sp"
                         android:layout_weight="0.10"
                         android:layout_marginRight="40dp"
                         android:textStyle="normal"
                         android:paddingLeft="10dp"
                         android:paddingRight="10dp"
                         android:layout_column="1"
                         android:gravity="right"
                         />
                     <TextView
                         android:text="الوجهة"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/passengerNameTV4"
                         android:textColor="@color/colorPrimary"
                         android:textSize="18sp"
                         android:textStyle="bold"
                         android:paddingLeft="10dp"
                         android:layout_column="2"/>


                 </TableRow>

                 <TableRow
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:gravity="right"
                     android:layout_marginBottom="20dp">

                     <TextView

                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/timeTV"
                         android:textColor="@color/black"
                         android:textSize="14sp"
                         android:layout_weight="0.10"
                         android:layout_marginRight="40dp"
                         android:textStyle="normal"
                         android:paddingLeft="10dp"
                         android:paddingRight="10dp"
                         android:layout_column="1"
                         android:gravity="right"
                         />

                     <TextView
                         android:text="وقت الوصول"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/timeTV1"
                         android:textColor="@color/colorPrimary"
                         android:textSize="18sp"
                         android:textStyle="bold"
                         android:paddingLeft="10dp"
                         android:layout_column="2"/>


                 </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/scheduleButton"
                        android:text="اضغط هنا "
                        android:clickable="true"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_weight="0.10"
                        android:layout_marginRight="40dp"
                        android:textStyle="normal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_column="1"
                        android:gravity="right"
                        />

                    <TextView
                        android:text="معلومات الرحلة "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/scheduleInfo"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:layout_column="2"/>


                </TableRow>


            </TableLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:text="رفض"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:id="@+id/rejectB"
                    android:layout_column="1"
                    android:textSize="17dp"
                    android:background="@drawable/red_button"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"

                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp" />

                <Button
                    android:text="قبول "
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:id="@+id/acceptB"
                    android:layout_column="2"
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    android:background="@drawable/grean_button"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:weightSum="1"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageButton
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/leftgray"
                    android:id="@+id/btnNext"
                    android:clickable="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitStart"
                    android:foregroundGravity="left"
                    android:layout_gravity="left"/>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/rightgray"
                    android:id="@+id/btnPrev"
                    android:clickable="true"
                    android:background="@color/transparent"
                    android:scaleType="fitEnd"
                    android:foregroundGravity="right"
                    android:layout_gravity="right" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
