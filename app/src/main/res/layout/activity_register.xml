<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_shadow"
    android:id="@+id/register">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp">


            <TextView
                android:text="تسجيل الدخول كسائق "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="?attr/colorButtonNormal"
                android:textSize="30sp"
                android:gravity="center" />
<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColorHint="@android:color/darker_gray" >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="7"
        android:id="@+id/fistNameET"
        android:textColorLink="?attr/colorButtonNormal"
        android:textColor="?attr/colorButtonNormal"
        android:gravity="right"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="الاسم الأول"
        android:layout_marginTop="10dp"
        />
</android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray" >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="7"
                    android:id="@+id/lastNameET"
                    android:textColorLink="?attr/colorButtonNormal"
                    android:textColor="?attr/colorButtonNormal"
                    android:gravity="right"
                    android:background="@android:drawable/editbox_background_normal"
                    android:hint="الاسم الإخير"
                    android:textColorHint="@android:color/darker_gray"
                    android:layout_marginTop="10dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/emailET"
                android:textColorLink="?attr/colorButtonNormal"
                android:textColor="?attr/colorButtonNormal"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="البريد الإلكتروني"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                android:gravity="right"/>
            </android.support.design.widget.TextInputLayout>




            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwordET"
                android:textColor="?attr/colorButtonNormal"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="كلمة المرور"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                android:gravity="right"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="7"
                android:id="@+id/passwordCheckET"
                android:textColorLink="?attr/colorButtonNormal"
                android:textColor="?attr/colorButtonNormal"
                android:gravity="right"
                android:background="@android:drawable/editbox_background_normal"

                android:hint="تأكيد كلمة المرور"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="10dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/phoneET"
                android:textColorLink="?attr/colorButtonNormal"
                android:textColor="?attr/colorButtonNormal"
                android:gravity="right"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="رقم الجوال"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="10dp" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_width="31dp"
                    android:layout_height="34dp"
                    android:id="@+id/datepickerB"
                    android:background="@drawable/calender_gray"
                    android:elevation="0dp"
                    android:gravity="right"
                    android:layout_gravity="bottom"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/darker_gray" >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ems="7"
                        android:id="@+id/datepickerET"
                        android:textColorLink="?attr/colorButtonNormal"
                        android:textColor="?attr/colorButtonNormal"
                        android:background="@android:drawable/editbox_background_normal"
                        android:gravity="right"
                        android:foregroundGravity="right"
                        android:layout_weight="1"

                        android:hint="تاريخ الميلاد"
                        android:textColorHint="@android:color/darker_gray"/>
                </android.support.design.widget.TextInputLayout>



            </LinearLayout>


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/spinner"
                android:scrollbarSize="@dimen/activity_horizontal_margin"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:entries="@array/nationality"
                android:background="@android:drawable/btn_dropdown"
                android:layout_weight="0.14" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray" >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="7"
                    android:id="@+id/identificationNumET"
                    android:textColorLink="?attr/colorButtonNormal"
                    android:textColor="?attr/colorButtonNormal"
                    android:gravity="right"
                    android:background="@android:drawable/editbox_background_normal"
                    android:hint="رقم الهوية الوطنية او الإقامة "
                    android:textColorHint="@android:color/darker_gray"
                    android:layout_marginTop="10dp" />
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="7"
                android:id="@+id/companyET"
                android:textColorLink="?attr/colorButtonNormal"
                android:textColor="?attr/colorButtonNormal"
                android:gravity="right"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="اسم الشركة التي تعمل بها أن وجد"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="10dp"/>
            </android.support.design.widget.TextInputLayout>



